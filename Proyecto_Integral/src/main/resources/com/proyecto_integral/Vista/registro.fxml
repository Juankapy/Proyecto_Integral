<AnchorPane prefHeight="487.0" prefWidth="650.0" style="-fx-background-color: #f5f1ea;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Controller.RegistroController">
   <children>
      <StackPane prefWidth="297.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="ImgLateralLogin" fitWidth="297.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER">
               <image>
                  <Image url="@../../../assets/Imagenes/perros/ImgLogin.jpg" />
               </image>
            </ImageView>
         </children>
      </StackPane>

      <HBox alignment="CENTER" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="320.0" AnchorPane.topAnchor="14.0">
         <children>
            <ImageView fx:id="ImgUsuario" fitHeight="50.0" fitWidth="51.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../assets/Imagenes/iconos/usuario-orange.png" />
               </image>
            </ImageView>
         </children>
      </HBox>

      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="320.0" AnchorPane.topAnchor="80.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Nombre">
                           <font>
                              <Font name="Modern No. 20" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TxtNombre" prefHeight="25.0" style="-fx-border-color: #d2691e; -fx-border-radius: 8px;" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Apellidos">
                           <font>
                              <Font name="Modern No. 20" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TxtApellido" prefHeight="25.0" style="-fx-border-color: #d2691e; -fx-border-radius: 8px;" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Dirección">
                           <font>
                              <Font name="Modern No. 20" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TxtDireccion" prefHeight="25.0" style="-fx-border-color: #d2691e; -fx-border-radius: 8px;" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Provincia">
                           <font>
                              <Font name="Modern No. 20" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TxtProvincia" prefHeight="25.0" style="-fx-border-color: #d2691e; -fx-border-radius: 8px;" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <HBox spacing="10.0">
               <children>
                  <VBox HBox.hgrow="SOMETIMES">
                     <children>
                        <Label text="CP">
                           <font>
                              <Font name="Modern No. 20" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TxtCP" prefHeight="25.0" prefWidth="70.0" style="-fx-border-color: #d2691e; -fx-border-radius: 8px;" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Ciudad">
                           <font>
                              <Font name="Modern No. 20" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TxtCiudad" prefHeight="25.0" style="-fx-border-color: #d2691e; -fx-border-radius: 8px;" />
                     </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Teléfono">
                           <font>
                              <Font name="Modern No. 20" size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="TxtTel" prefHeight="25.0" style="-fx-border-color: #d2691e; -fx-border-radius: 8px;" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <VBox>
               <children>
                  <Label text="Correo eléctronico">
                     <font>
                        <Font name="Modern No. 20" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="TxtCorreo" prefHeight="25.0" style="-fx-border-color: #d2691e; -fx-border-radius: 8px;" />
               </children>
            </VBox>

            <VBox>
               <children>
                  <Label text="Contraseña">
                     <font>
                        <Font name="Modern No. 20" size="16.0" />
                     </font>
                  </Label>
                  <TextField fx:id="TxtContra" prefHeight="25.0" style="-fx-border-color: #d2691e; -fx-border-radius: 8px;" />
               </children>
            </VBox>
            <Region VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <ImageView fx:id="ImgIconoDog" fitHeight="60.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../assets/Imagenes/iconos/icono-bgless.png" />
                     </image>
                  </ImageView>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="BtnConfirmar" mnemonicParsing="false" onAction="#ConfirmarRegistro" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #d2691e; -fx-background-radius: 12px;" text="Confirmar" textFill="#fafafa">
                     <font>
                        <Font name="Modern No. 20" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>

      <ImageView fx:id="ImgIconoSalida" fitHeight="25.0" fitWidth="20.0" onMouseClicked="#Volver" opacity="0.86" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="15.0" style="-fx-cursor: hand;">
         <image>
            <Image url="@../../../assets/Imagenes/iconos/salir.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
