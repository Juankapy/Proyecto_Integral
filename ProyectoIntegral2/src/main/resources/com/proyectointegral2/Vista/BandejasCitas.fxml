                                           <children>
                                               <Button style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5;" text="Modificar" />
                                               <Button style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5;" text="Cancelar" />
                                           </children>
                                       </HBox>
                                   </children>
                               </VBox>
                           </children>

                        </VBox>
                    </content>
                </ScrollPane>
            </center>
            <bottom>
                <HBox alignment="CENTER" prefHeight="80.0" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fx:id="logoFooter" fitHeight="109.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true">
                            <image><Image url="@../../../assets/Imagenes/iconos/icono-bgless.png" /></image>
                        </ImageView>
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
        <Label fx:id="lblNoCitas" style="-fx-font-size: 22px; -fx-text-fill: #707070;" text="No hay citas disponibles" visible="false">
            <font>
                <Font name="System Italic" size="22.0" />
            </font>
        </Label>
    </children>
