<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyectointegral2.Controller.BandejaCitasController">
    <children>
        <BorderPane fx:id="mainContentPane" style="-fx-background-color: #FDF5E6;">
            <top>
                <VBox alignment="CENTER" style="-fx-background-color: #E67E22;" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Mis Citas con Perritos" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                            <padding>
                                <Insets bottom="15.0" top="15.0" />
                            </padding>
                        </Label>
                    </children>
                </VBox>
            </top>
            <center>
                <ScrollPane fx:id="citasScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="397.0" prefWidth="446.0" style="-fx-background-color: transparent; -fx-background: transparent;" BorderPane.alignment="CENTER">
                    <content>
                        <VBox fx:id="citasContainerVBox" alignment="TOP_CENTER" prefHeight="401.0" prefWidth="444.0" spacing="20.0">
                            <padding>
                                <Insets bottom="20.0" left="50.0" right="50.0" top="30.0" />
                            </padding>
                            <children>

                                <VBox fx:id="tarjetaCitaEjemplo" maxWidth="600.0" spacing="10.0" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #D0D0D0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                                    <children>
                                        <Label fx:id="lblNombrePerroCita" style="-fx-text-fill: black;" text="Max - Siberian Husky">
                                            <font>
                                                <Font name="System Bold" size="21.0" />
                                            </font>
                                            <VBox.margin>
                                                <Insets bottom="5.0" />
                                            </VBox.margin>
                                        </Label>

                                        <HBox alignment="BASELINE_LEFT" spacing="5.0">
                                            <children>
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: black; -fx-font-size: 14px;" text="Fecha:" />
                                                <Label fx:id="LblFechaCita" style="-fx-text-fill: black; -fx-font-size: 14px;" text="15/05/2024" />
                                            </children>
                                        </HBox>

                                        <HBox alignment="BASELINE_LEFT" spacing="5.0">
                                            <children>
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: black; -fx-font-size: 14px;" text="Hora:" />
                                                <Label fx:id="LblHoraCita" style="-fx-text-fill: black; -fx-font-size: 14px;" text="10:30 AM" />
                                            </children>
                                        </HBox>

                                        <HBox alignment="BASELINE_LEFT" spacing="5.0">
                                            <children>
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: black; -fx-font-size: 14px;" text="Lugar:" />
                                                <Label fx:id="LblLugarCita" style="-fx-text-fill: black; -fx-font-size: 14px;" text="Parque Central" />
                                            </children>
                                        </HBox>

                                        <HBox alignment="BASELINE_LEFT" spacing="5.0">
                                            <children>
                                                <Label style="-fx-font-weight: bold; -fx-text-fill: black; -fx-font-size: 14px;" text="Protectora:" />
                                                <Label fx:id="LblProtectoraCita" style="-fx-text-fill: black; -fx-font-size: 14px;" text="Amigos Peludos" />
                                            </children>
                                            <VBox.margin>
                                                <Insets bottom="10.0" />
                                            </VBox.margin>
                                        </HBox>


                                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                            <children>
                                                <Button fx:id="BtnCancelar" onAction="#CancelarCita" prefHeight="28.0" prefWidth="77.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-background-radius: 5;" text="Cancelar">
                                       <font>
                                          <Font size="13.0" />
                                       </font></Button>
                                            </children>
                                            <VBox.margin>
                                                <Insets top="10.0" />
                                            </VBox.margin>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>
            <bottom>
                <HBox alignment="CENTER" prefHeight="80.0" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fx:id="logoFooter" fitHeight="109.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true">
                            <image><Image url="@../../../assets/Imagenes/iconos/icono-bgless.png" /></image>
                        </ImageView>
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
        <Label fx:id="lblNoCitas" style="-fx-font-size: 22px; -fx-text-fill: #707070;" text="No hay citas disponibles" visible="false">
            <font>
                <Font name="System Italic" size="22.0" />
            </font>
        </Label>
    </children>
</StackPane>
