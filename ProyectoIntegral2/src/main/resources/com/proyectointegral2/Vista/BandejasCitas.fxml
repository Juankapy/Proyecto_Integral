                                       <Label text="Max - Siberian Husky" style="-fx-text-fill: black">
                                 <font>
                                    <Font name="System Bold" size="21.0" />
                                 </font>
                              </Label>
                                       <Label text="Fecha: 30/04/2025" style="-fx-text-fill: black"/>
                                       <Label text="Hora: 17:00" style="-fx-text-fill: black" />
                                       <Label text="Lugar: Dogpuccino"  style="-fx-text-fill: black"/>
