<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="formularioUsuarioPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="600.0" style="-fx-background-color: #F5F1EA;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyectointegral2.Controller.FormularioUsuarioController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
                <ImageView fx:id="imgIconoVolver" fitHeight="50.0" fitWidth="26.0" onMouseClicked="#Volver" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../../../assets/Imagenes/iconos/salir.png" />
                    </image>
                </ImageView>
                <Label fx:id="lblTituloFormulario" text="Editar Perfil" textFill="#3E2723">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" BorderPane.alignment="CENTER">
            <content>
                <VBox alignment="TOP_CENTER" spacing="25.0">
                    <padding>
                        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
                    </padding>
                    <children>
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <ImageView fx:id="imgFotoPerfilEditable" fitHeight="130.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" style="-fx-background-color: #E0E0E0; -fx-border-color: #A1887F; -fx-border-radius: 65; -fx-background-radius: 65;"> <!-- Circular -->
                                    <image>
                                        <Image url="@../../../assets/Imagenes/iconos/sinusuario.jpg" />
                                    </image>
                                </ImageView>
                                <Button fx:id="btnCambiarFoto" mnemonicParsing="false" onAction="#CambiarFoto" style="-fx-background-color: #6596ed; -fx-text-fill: white; -fx-background-radius: 5;" text="Cambiar Foto">
                                    <font><Font size="13.0" /></font>
                                </Button>
                            </children>
                        </VBox>

                        <GridPane hgap="10.0" vgap="12.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="120.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Nombre:" GridPane.halignment="RIGHT">
                                    <font><Font name="System Bold" size="14.0" /></font></Label>
                                <TextField fx:id="TxtNombre" style="-fx-border-color: #d2691e; -fx-border-radius: 5; -fx-background-color: #f5f1ea;" GridPane.columnIndex="1" />

                                <Label text="Apellidos:" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                                    <font><Font name="System Bold" size="14.0" /></font></Label>
                                <TextField fx:id="TxtApellidos" style="-fx-border-color: #d2691e; -fx-border-radius: 5; -fx-background-color: #f5f1ea;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Email:" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                                    <font><Font name="System Bold" size="14.0" /></font></Label>
                                <TextField fx:id="TxtEmail" style="-fx-border-color: #d2691e; -fx-border-radius: 5; -fx-background-color: #f5f1ea;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Teléfono:" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                                    <font><Font name="System Bold" size="14.0" /></font></Label>
                                <TextField fx:id="TxtTelefono" style="-fx-border-color: #d2691e; -fx-border-radius: 5; -fx-background-color: #f5f1ea;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="Dirección:" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
                                    <font><Font name="System Bold" size="14.0" /></font></Label>
                                <TextField fx:id="TxtDireccion" style="-fx-border-color: #d2691e; -fx-border-radius: 5; -fx-background-color: #f5f1ea;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                <Label text="Contraseña:" GridPane.halignment="RIGHT" GridPane.rowIndex="5">
                                    <font><Font name="System Bold" size="14.0" /></font></Label>
                                <PasswordField fx:id="TxtPassword" promptText="Dejar en blanco para no cambiar" style="-fx-border-color: #d2691e; -fx-border-radius: 5; -fx-background-color: #f5f1ea;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                <Label text="Confirmar Contraseña:" GridPane.halignment="RIGHT" GridPane.rowIndex="6">
                                    <font><Font name="System Bold" size="14.0" /></font></Label>
                                <PasswordField fx:id="TxtConfirmPassword" promptText="Dejar en blanco para no cambiar" style="-fx-border-color: #d2691e; -fx-border-radius: 5; -fx-background-color: #f5f1ea;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="70.0" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="BtnCancelar" mnemonicParsing="false" onAction="#Cancelar" style="-fx-background-color: red; -fx-text-fill: white; -fx-background-radius: 8;" text="Cancelar">
                    <font><Font name="System Bold" size="14.0" /></font>
                    <padding><Insets bottom="8.0" left="20.0" right="20.0" top="8.0" /></padding>
                </Button>
                <Button fx:id="BtnGuardar" mnemonicParsing="false" onAction="#Guardar" style="-fx-background-color: #6596ed; -fx-text-fill: white; -fx-background-radius: 8;" text="Guardar Cambios">
                    <font><Font name="System Bold" size="14.0" /></font>
                    <padding><Insets bottom="8.0" left="20.0" right="20.0" top="8.0" /></padding>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
